<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
    <%= form_tag movies_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a movie"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>

    <%= link_to "Batman Movies", movies_path(params: {query: "Batman"}), class: "btn btn-primary" %>
    <%= link_to "Superman Movies", movies_path(params: {query: "Superman"}), class: "btn btn-danger" %>


      <div id="movies">
        <% @movies.each do |movie| %>
          <h4><%= movie.title %></h4>
          <p><%= movie.synopsis %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>


